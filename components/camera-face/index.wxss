/* components/camera-face/index.wxss */
.page-body {
  width: 100%;
  height: 100%;
  background: white;
}
.cover-view {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  background-color: white;
}
.camera-box {
  width: 750rpx;
  height: 505rpx;
  margin-top: 150rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.camera {
  width: 480rpx;
  height: 480rpx;
  z-index: 1;
  /*border-radius: 50%;*/
}

.img-view {
  width: 750rpx;
  height: 505rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
}
.mask-img {
  width: 750rpx;
  height: 505rpx;
}

.bottom-view {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  margin-top: 150rpx;
}
.bottom-btn {
  padding: 20rpx 100rpx;
  text-align: center;
  color: white;
  font-size: larger;
  background-color: #2F88FF;
  box-shadow:  3px 3px 5px #dfdfdf;
}

.bottom-tips {
  width: 100%;
  height: 35rpx;
  color: black;
  line-height: 35rpx;
  text-align: center;
}
